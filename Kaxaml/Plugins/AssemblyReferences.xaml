<UserControl
    x:Class="Kaxaml.Plugins.AssemblyReferences"
    x:Name="MainUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:controls="clr-namespace:Kaxaml.Controls"
    xmlns:behaviors="clr-namespace:KaxamlPlugins.Behaviors;assembly=KaxamlPlugins"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    Margin="0 5"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300">

    <Grid
        MinHeight="50"
        Background="Transparent"
        DataContext="{Binding ElementName=MainUserControl}">
        <Grid.Resources>
            <CollectionViewSource
                x:Key="AllReferencesCollectionView"
                Source="{Binding AllReferences}">
                <CollectionViewSource.SortDescriptions>
                    <componentModel:SortDescription
                        PropertyName="Name" />
                </CollectionViewSource.SortDescriptions>
            </CollectionViewSource>

            <DataTemplate
                DataType="{x:Type controls:AssemblyReference}">
                <TextBlock
                    VerticalAlignment="Center"
                    Margin="2"
                    TextWrapping="Wrap">
                    <TextBlock.Text>
                        <MultiBinding
                            StringFormat="{}{0} ({1}) {2}">
                            <Binding
                                Path="Name" />
                            <Binding
                                Path="AssemblyFileVersion" />
                            <Binding
                                Path="TargetFramework" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </DataTemplate>

        </Grid.Resources>

        <Border
            Name="OuterBorder"
            CornerRadius="4"
            Margin="0,2">

            <Grid>
                <!-- CONTENT LISTBOX-->
                <ListBox
                    Margin="0,0,0,0"
                    ItemsSource="{Binding Source={StaticResource AllReferencesCollectionView}}"
                    FocusVisualStyle="{x:Null}"
                    OverridesDefaultStyle="True"
                    HorizontalContentAlignment="Stretch"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    TextElement.Foreground="#FFF">

                    <!-- LISTBOX TEMPLATE-->
                    <ListBox.Template>
                        <ControlTemplate
                            TargetType="{x:Type ListBox}">
                            <StackPanel
                                Margin="0"
                                IsItemsHost="true" />
                        </ControlTemplate>
                    </ListBox.Template>

                    <!-- LISTBOX ITEM TEMPLATE-->
                    <ListBox.ItemContainerStyle>
                        <Style
                            TargetType="{x:Type ListBoxItem}">
                            <Setter
                                Property="Margin"
                                Value="0" />
                            <Setter
                                Property="HorizontalAlignment"
                                Value="Stretch" />
                            <Setter
                                Property="OverridesDefaultStyle"
                                Value="True" />
                            <Setter
                                Property="FocusVisualStyle"
                                Value="{x:Null}" />
                            <Setter
                                Property="Foreground"
                                Value="#C8C8C8" />
                            <Setter
                                Property="ToolTip">
                                <Setter.Value>
                                    <Binding
                                        Path="FullName" />
                                </Setter.Value>
                            </Setter>
                            <Setter
                                Property="Template">
                                <Setter.Value>
                                    <ControlTemplate
                                        TargetType="{x:Type ListBoxItem}">
                                        <Border
                                            HorizontalAlignment="Stretch"
                                            Name="Border"
                                            SnapsToDevicePixels="True"
                                            Background="Transparent">
                                            <ContentPresenter
                                                VerticalAlignment="Center"
                                                Margin="8,4,5,4" />
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger
                                                Property="IsMouseOver"
                                                Value="True">
                                                <Setter
                                                    TargetName="Border"
                                                    Property="Background"
                                                    Value="#20FFFFFF" />
                                                <Setter
                                                    Property="Foreground"
                                                    Value="#FFFFFF" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>

                                    </ControlTemplate>

                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>

                <!--ADD BUTTON-->
                <Button
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Click="AddReferencesButton_OnClick"
                    Margin="0,0,4,0"
                    Width="20"
                    Height="20">
                    <Button.Template>
                        <ControlTemplate
                            TargetType="Button">
                            <Grid
                                x:Name="PART_MainGrid"
                                Opacity="0.9">
                                <!-- Background ellipse with dynamic brush -->
                                <Ellipse
                                    x:Name="PART_Circle"
                                    Width="{TemplateBinding Width}"
                                    Height="{TemplateBinding Height}"
                                    HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                    Fill="Green"
                                    Stroke="DarkGreen"
                                    StrokeThickness="1" />

                                <!-- Plus sign -->
                                <Path
                                    Width="{TemplateBinding Width}"
                                    Height="{TemplateBinding Height}"
                                    HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                    Stroke="White"
                                    StrokeThickness="2"
                                    StrokeStartLineCap="Round"
                                    StrokeEndLineCap="Round">
                                    <Path.Data>
                                        <GeometryGroup>
                                            <LineGeometry
                                                StartPoint="10,5"
                                                EndPoint="10,15" />
                                            <LineGeometry
                                                StartPoint="5,10"
                                                EndPoint="15,10" />
                                        </GeometryGroup>
                                    </Path.Data>
                                </Path>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <!-- MouseOver trigger -->
                                <Trigger
                                    Property="IsMouseOver"
                                    Value="True">
                                    <Setter
                                        TargetName="PART_Circle"
                                        Property="Stroke"
                                        Value="LightYellow" />
                                    <Setter
                                        TargetName="PART_MainGrid"
                                        Property="Opacity"
                                        Value="1" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!--WATERMARK-->
                <TextBlock
                    Text="{}{empty}"
                    FontSize="20"
                    Opacity="0.1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <TextBlock.LayoutTransform>
                        <ScaleTransform
                            ScaleX="1.3" />
                    </TextBlock.LayoutTransform>
                    <b:Interaction.Behaviors>
                        <behaviors:ControlVisibilityByCollectionChangedBehavior
                            IsInverse="True"
                            SourceCollection="{Binding AllReferences}" />
                    </b:Interaction.Behaviors>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>

</UserControl>